      <div id="browser" data-ng-controller='BrowserController' ng-show="selected == 'Browser'">
        <div class='browser-inner'>
          <div ng-show="loading == true">
            <%= image_tag('spinner.gif', class: 'spinner') %>
          </div>
          <div ng-show="loading == false">
            <table class='file-list table table-striped table-condensed'>
              <tr ng-class-odd="'odd'" ng-class-even="'even'" ng-click="$emit('parentSelected')" ng-show="currentPath.length > 0">
                <td>
                  <a href="#">
                    <%= fa_icon('arrow-circle-o-up') %> 
                  </a>
                </td>
                <td>
                  <a href="#">..</a>
                </td>
                <td></td>
              </tr>
              <tr ng-class-odd="'odd'" ng-class-even="'even'" ng-repeat="file in files">
                <td ng-show="file.type == 'file'" ng-click="$emit('fileSelected', file)">
                  <a href="#">
                    <%= fa_icon('file') %> 
                  </a>
                </td>
                <td ng-show="file.type == 'dir'" ng-click="$emit('dirSelected', file)">
                  <a href="#">
                    <%= fa_icon('folder') %> 
                  </a>
                </td>
                <td ng-click="$emit('deleteFile', file.path)">
                  <a href="#">
                    <%= fa_icon('times-circle') %> 
                  </a>
                </td>
                <td ng-show="file.type == 'file'" ng-click="$emit('fileSelected', file)">
                  <a href="#">{{file.name}}</a>
                </td>
                <td ng-show="file.type == 'dir'" ng-click="$emit('dirSelected', file)">
                  <a href="#">{{file.name}}</a>
                </td>
              </tr>
            </table>
            <div class="row">
              <div class="small-9 columns">
                <input type="text" class="form-control" ng-model='fileName' placeholder='file name'>
              </div>
              <div class="small-3 columns">
                <button class="button tiny" type="button" ng-click="$emit('createFile')">
                  Create
                </button>
              </div>
            </div><!-- /.row -->
          </div>
        </div>
      </div>
